{
  "name": "preact-parcel-demo",
  "version": "0.1.0",
  "main": "src/index.html",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.0.0-beta.56",
    "@babel/plugin-transform-react-jsx": "^7.0.0-beta.56",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-preset-preact": "^1.1.0",
    "eslint": "^5.3.0",
    "eslint-plugin-react": "^7.10.0",
    "node-sass": "^4.9.2",
    "parcel-bundler": "^1.9.7",
    "preact": "^8.2.9"
  },
  "scripts": {
    "prestart": "rm -rf dist .cache",
    "prebuild": "rm -rf dist .cache",
    "start": "parcel src/index.html",
    "build": "parcel build src/index.html"
  },
  "babel": {
    "presets": [
      "preact"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "alias": {
            "@app": "./src/app",
            "@styles": "./src/assets/styles",
            "@fonts": "./src/assets/fonts",
            "@images": "./src/assets/images"
          }
        }
      ],
      [
        "transform-react-jsx",
        {
          "pragma": "h"
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "settings": {
      "react": {
        "pragma": "h"
      }
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
